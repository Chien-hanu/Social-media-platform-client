<?xml version="1.0" encoding="UTF-8"?>
<!-- This web.xml file is not required when using Servlet 3.0 container, 
	see implementation details http://jersey.java.net/nonav/documentation/latest/jax-rs.html -->
<web-app version="4.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd">
	<display-name>Social Media Web</display-name>
	<servlet>
		<servlet-name>UserLoginController</servlet-name>
		<servlet-class>edu.hanu.social_media_platform_client.controller.UserLoginServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserLoginController</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UserRegisterController</servlet-name>
		<servlet-class>edu.hanu.social_media_platform_client.controller.UserRegisterServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserRegisterController</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UserForgotPasswordController</servlet-name>
		<servlet-class>edu.hanu.social_media_platform_client.controller.UserForgotPasswordServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserForgotPasswordController</servlet-name>
		<url-pattern>/forgot</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UserChangePasswordController</servlet-name>
		<servlet-class>edu.hanu.social_media_platform_client.controller.UserChangePasswordServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserChangePasswordController</servlet-name>
		<url-pattern>/changePassword</url-pattern>
	</servlet-mapping>
</web-app>
